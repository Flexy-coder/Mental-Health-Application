    <item
        android:drawable="@android:color/darker_gray"
        android:width="150dp"
        android:height="150dp" />

    <!-- Placeholder circle (white circle) -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>
