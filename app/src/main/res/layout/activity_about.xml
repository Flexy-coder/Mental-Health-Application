<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- About Title -->
    <TextView
        android:id="@+id/textViewAboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Demo Therapy Crisis Helplines -->
    <TextView
        android:id="@+id/textViewCrisisHelplinesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo Therapy Crisis Helplines"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Crisis Helpline 1: (555) 123-4567"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Crisis Helpline 2: (555) 987-6543"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Emergency Contacts -->
    <TextView
        android:id="@+id/textViewEmergencyContactsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Police: 911"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Fire Department: 911"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Medical Emergency: 911"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Therapist Directory -->
    <TextView
        android:id="@+id/textViewTherapistDirectoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Therapist Directory"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. John Doe, PhD"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Contact: (555) 111-1111"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Email: john.doe@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Jane Smith, MSW"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Contact: (555) 222-2222"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Email: jane.smith@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

</LinearLayout>
